<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:staggered="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".RandomFriendsActivity" >

    <TextView
        android:id="@+id/shakeTips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/startButton"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:layout_toLeftOf="@id/startButton"
        android:background="@color/yellow"
        android:gravity="center"
        android:text="@string/shake_tips"
        android:textColor="@color/black"
        android:textSize="8pt" />

    <Button
        android:id="@id/startButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:background="@color/red"
        android:text="@string/start_game" />

    <com.origamilabs.library.views.StaggeredGridView
        android:id="@+id/staggeredGridView2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/shakeTips"
        staggered:drawSelectorOnTop="true"
        staggered:numColumns="4" />

</RelativeLayout>